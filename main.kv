# NOTE: multiple empty labels were used to arrange
# the layout nicely. I could make it in a better
# way but this is just faster for me

#:import Factory kivy.factory.Factory
WindowManager:
    FirstScreen:
    GameScreen:
    LoseScreen:
    WinScreen:
    AddQuestionScreen:
    AdvancedScreen:    

<GridLayout>
    size: root.width, root.height

<Label>
    # yellow text
    color: (1, 1, 0, 1)
    # wanted to put this here but for some reason it crashes popups
    # text_size: self.size
    # instead i have to add it to every single label :)
    halign: "center"
    valign: "middle"

<Button>
    # red button
    background_color: (250 / 255, 65 / 255, 65 / 255, 1)
    on_press: self.background_color = (1, 0, 0, 1)
    # white text
    color: (1, 1, 1, 1)

<TextInput>
    multiline: False

<Cards@Popup>
    auto_dismiss: False
    size_hint: 0.9, 0.5
    title: "CARDS"
    
    GridLayout:
        rows: 4
        Label:
            text_size: self.size
            text:"CHOOSE A CARD"
        GridLayout:
            cols:4
            # all options do the same, what a surprise :o
            Button:
                on_release: 
                    app.root.cards_help()
                    root.dismiss()
            Button:
                on_release: 
                    app.root.cards_help()
                    root.dismiss()
            Button:
                on_release: 
                    app.root.cards_help()
                    root.dismiss()
            Button:
                on_release: 
                    app.root.cards_help()
                    root.dismiss()
        Label:
        Button:
            text_size: self.size
            text: "CANCEL"
            on_release: root.dismiss()
    
<Signs@Popup>
    auto_dismiss: False
    size_hint: 0.9, 0.5
    title: "SIGNS"

    GridLayout:
        rows: 2
        Label:
            text_size: self.size
            text: f"The sign of number {app.root.signs_help()} was the most chosen one"
        GridLayout:
            cols: 3
            Label:
            GridLayout:
                rows: 3
                Label:
                Button:
                    text_size: self.size
                    text: "CLOSE"
                    on_release: root.dismiss()
                Label:
            Label:

<Academicals@Popup>
    auto_dismiss: False
    size_hint: 0.9, 0.5
    title: "ACADEMICALS"

    GridLayout:
        rows: 2
        Label:
            text_size: self.size
            text: f"The majority thinks that the option {app.root.academicals_help()} is the correct one"
        GridLayout:
            cols: 3
            Label:
            GridLayout:
                rows: 3
                Label:
                Button:
                    text_size: self.size
                    text: "CLOSE"
                    on_release: root.dismiss()
                Label:
            Label:

<MilionMessage@Popup>
    auto_dismiss: False
    size_hint: 0.95, 0.95
    title: "WARNING"

    GridLayout:
        rows: 2
        Label:
            text_size: self.size
            text: "HELP WILL NOT BE AVALIABLE FOR THE NEXT QUESTION"
        GridLayout:
            cols: 2
            GridLayout:
                rows: 3
                Label:
                GridLayout:
                    cols: 2
                    Label:
                    Button:
                        text_size: self.size
                        text: "OK"
                        on_release: root.dismiss()
                Label:
            GridLayout:
                rows: 3
                Label:
                GridLayout:
                    cols: 2
                    Button:
                        text_size: self.size
                        text: "STOP"
                        on_release: 
                            app.root.give_up()
                            app.root.current = "lose"
                            app.root.transition.direction = "up"
                            root.dismiss()
                    Label:
                Label:

<WarningBad@Popup>
    auto_dismiss: False
    size_hint: 0.9, 0.5
    title: "WARNING"

    GridLayout:
        rows: 2
        Label:
            text: "INVALID ENTRY"
        GridLayout:
            rows: 3
            Label:
            GridLayout:
                cols: 3
                Label:
                Button:
                    text: "CLOSE"
                    on_release: root.dismiss()
                Label:
            Label:

<WarningGood@Popup>
    auto_dismiss: False
    size_hint: 0.9, 0.5
    title: "WARNING"

    GridLayout:
        rows: 2
        Label:
            text: "ENTRY SAVED SUCCESSFULLY"
        GridLayout:
            rows: 3
            Label:
            GridLayout:
                cols: 3
                Label:
                Button:
                    text: "CLOSE"
                    on_release: root.dismiss()
                Label:
            Label:


<FirstScreen>
    name: "start"
    
    GridLayout:
        rows: 3
        Label:
            text_size: self.size
            text: "SHOW DO MILH√ÉO"
        # ugly way of centering the button and making it small
        GridLayout:
            cols: 3
            Label:
            GridLayout:
                rows: 3
                Label:
                Button:
                    text_size: self.size
                    text: "START"
                    on_release: 
                        app.root.current = "game"
                        root.manager.transition.direction = "left"
                Button:
                    text_size: self.size
                    text: "ADD QUESTIONS"
                    on_release: 
                        app.root.current = "add_question"
                        root.manager.transition.direction = "left"
            Label:
        Label:

<GameScreen>
    name: "game"
    
    title: title
    one: one
    two: two
    three: three
    four: four
    cards: cards
    signs: signs
    academicals: academicals
    skip_1: skip_1
    skip_2: skip_2
    skip_3: skip_3
    stop_btn: stop_btn


    GridLayout:
        cols: 1
        GridLayout:
            rows: 5
            Label:
                text_size: self.size
                halign: 'left'
                padding_x: 10
                id: title
                text: root.question.title
            Button:
                text_size: self.size
                halign: 'left'
                padding_x: 10
                id: one
                text: f"1: {root.question.options[0]}"
                on_release: root.check_one()
            Button:
                text_size: self.size
                halign: 'left'
                padding_x: 10
                id: two
                text: f"2: {root.question.options[1]}"
                on_release: root.check_two()
            Button:
                text_size: self.size
                halign: 'left'
                padding_x: 10
                id: three
                text: f"3: {root.question.options[2]}"
                on_release: root.check_three()
            Button:
                text_size: self.size
                halign: 'left'
                padding_x: 10
                id: four
                text: f"4: {root.question.options[3]}"
                on_release: root.check_four()
        GridLayout:
            rows: 3
            Label:
                text_size: self.size
                text: "HELP:"
            GridLayout:
                cols: 3
                rows: 2
                Button:
                    text_size: self.size
                    id: cards
                    text: "CARDS"
                    on_release: Factory.Cards().open()
                Button:
                    text_size: self.size
                    id: signs
                    text: "SIGNS"
                    on_release: Factory.Signs().open()
                Button:
                    text_size: self.size
                    id: academicals
                    text: "ACADEMICALS"
                    on_release: Factory.Academicals().open()
                Button:
                    text_size: self.size
                    id: skip_1
                    text: "SKIP"
                    on_release: root.skip1()
                Button:
                    text_size: self.size
                    id: skip_2
                    text: "SKIP"
                    on_release: root.skip2()
                Button:
                    text_size: self.size
                    id: skip_3
                    text: "SKIP"
                    on_release: root.skip3()
            GridLayout:
                cols: 3
                Label:
                    text_size: self.size
                    text: "MISS: "     
                Button:
                    id: stop_btn
                    text_size: self.size
                    text: "STOP: "
                    on_release:
                        root.stop()
                        app.root.current = "lose"
                        root.manager.transition.direction = "up"
                Label:
                    text_size: self.size
                    text: "NEXT:"

<LoseScreen>
    name: "lose"
    
    score_message: score_message

    GridLayout:
        rows: 2
        GridLayout:
            rows: 2
            Label:
                text_size: self.size
                text: "GAME OVER"
            Label:
                id: score_message
        GridLayout:
            cols: 3
            Label:
            GridLayout:
                rows: 3
                Label:
                Button:
                    text_size: self.size
                    text: "PLAY AGAIN"
                    on_release: 
                        app.root.current = "start"
                        root.manager.transition.direction = "right"
                Label:
            Label:

<WinScreen>
    name: "win"
    
    GridLayout:
        rows: 2
        GridLayout:
            rows: 3
            Label:
                text_size: self.size
                text: "GAME OVER"
            Label:
                text_size: self.size
                text: "CONGRATULATIONS YOU WON!"
            Label:
                text_size: self.size
                text: "Score: 15"
        GridLayout:
            cols: 3
            Label:
            GridLayout:
                rows: 3
                Label:
                Button:
                    text_size: self.size
                    text: "PLAY AGAIN"
                    on_release: 
                        app.root.current = "start"
                        root.manager.transition.direction = "right"
                Label:
            Label:

<AddQuestionScreen>
    name: "add_question"

    title_add: title_add
    option1_add: option1_add
    option2_add: option2_add
    option3_add: option3_add
    option4_add: option4_add

    GridLayout:
        rows: 7
        GridLayout:
            cols:3
            GridLayout:
                cols: 2
                GridLayout:
                    rows:2
                    Button:
                        text_size: self.size
                        text: "BACK"
                        on_release: 
                            app.root.current = "start"
                            root.manager.transition.direction = "right"
                    Label:
                Label:
            Label:
                text_size: self.size
                text: "ADD QUESTION"
            GridLayout:
                cols: 2
                Label:
                GridLayout:
                    rows:2
                    Button:
                        text_size: self.size
                        text: "JSON"
                        on_release: 
                            app.root.current = "advanced"
                            root.manager.transition.direction = "left"
                    Label:
        GridLayout:
            rows: 2
            Label:
                text_size: self.size
                halign: 'left'
                text: "Title"
            TextInput:
                id: title_add
        GridLayout:
            rows: 2
            Label:
                text_size: self.size
                halign: 'left'
                text: "Option 1 (correct)"
            TextInput:
                id: option1_add
        GridLayout:
            rows: 2
            Label:
                text_size: self.size
                halign: 'left'
                text: "Option 2"
            TextInput:
                id: option2_add
        GridLayout:
            rows: 2
            Label:
                text_size: self.size
                halign: 'left'
                text: "Option 3"
            TextInput:
                id: option3_add
        GridLayout:
            rows: 2
            Label:
                text_size: self.size
                halign: 'left'
                text: "Option 4"
            TextInput:
                id: option4_add
        GridLayout:
            rows: 3
            Label:
            GridLayout:
                cols: 5
                Label:
                Spinner:
                    text_size: self.size
                    id: difficulty
                    text: "Mode"
                    values: ["easy","medium","hard"]
                    on_text: root.select_difficulty(difficulty.text)
                Label:
                Button:
                    text_size: self.size
                    text: "Confirm"
                    on_release: root.confirm()
                Label:
            Label:

<AdvancedScreen>
    name: "advanced"

    custom_json: custom_json

    FloatLayout:
        TextInput:
            id: custom_json
            size_hint: 1, 0.9
            pos_hint: {"top": 1}
            multiline: True
        # wanted to update it when changing screen but didn't know how
        Button:
            size_hint: 0.5, 0.1
            text: "LOAD DATA"
            on_release:
                root.update_text()
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {"right": 1}
            text: "CONFIRM"
            on_release:
                root.save_custom()
                root.manager.transition.direction = "right"
